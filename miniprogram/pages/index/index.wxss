/**
 * content
 */
.content {
  margin: 0 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content-card {
  position: relative;
  width: 320rpx;
  height: 240rpx;
  margin-bottom: 60rpx;
  border-radius: 16rpx;
  box-shadow: 0px 2px 4px rgba(215, 215, 215, 0.5);
}

.content-card .card-image {
  display: block;
  width: 100%;
  height: 180rpx;
}

.content-card .card-text {
  display: flex;
  justify-content: space-between;
  align-items: center;

  height: 60rpx;
  padding: 0 10rpx 0 12rpx;
  color: #333;
  font-size: 24rpx;
}

.content-card .card-text .card-text-right {
  color: rgb(255, 135, 155);
}
.content-card .card-text .card-text-right-finish {
  color: #999;
}

.content-card .card-flag {
  position: absolute;
  top: 10rpx;
  left: -10rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  width: 124rpx;
  height: 44rpx;
  background-image: url('data:image/png;base64,');
  background-size: contain;
  background-repeat: no-repeat;
  color: #fff;
  font-size: 24rpx;
}
.content-card .card-flag.card-flag-finish {
  background-image: url('data:image/png;base64,');
}
.content-card .card-flag:before {
  content: '';
  position: absolute;
  left: 0;
  bottom: -10rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid #000;
  border-left: 10rpx solid transparent;
}
.content-card .card-flag.card-flag-finish:before {
  border-top: 10rpx solid #8f8f8f;
}

/**
 * loading
 */
.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: -128rpx;
}
.lds-ring {
  display: block;
  position: relative;
  top: 50%;
  width: 128rpx;
  height: 128rpx;
}
.lds-ring view {
  box-sizing: border-box;
  display: block;
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  margin: 12rpx;
  border: 12rpx solid #4497f7;
  border-radius: 50%;
  animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
  border-color: #4497f7 transparent transparent transparent;
}
.lds-ring view:nth-child(1) {
  animation-delay: -0.45s;
}
.lds-ring view:nth-child(2) {
  animation-delay: -0.3s;
}
.lds-ring view:nth-child(3) {
  animation-delay: -0.15s;
}
@keyframes lds-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}