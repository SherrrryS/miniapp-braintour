/* pages/addFunction/addFunction.wxss */

@import "../../style/guide.wxss";

.stopwatch {
    position: relative;
    width: 100%;
    height: 100vh;
}

.stopwatch-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.stopwatch-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
    z-index: 10;
}
.stopwatch-mask-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 490rpx;
    height: 122rpx;
}

.stopwatch-header, .stopwatch-header-pregame {
    /* display: flex;
    align-items: center;
    justify-content: center; */

    position: relative;
    height: 396rpx;
    overflow: hidden;
}

.stopwatch-official-counting {
    display: flex;
    justify-content: center;
    align-items: center;

    width: 196rpx;
    height: 196rpx;
    margin: 120rpx auto 0;
    background-color: rgb(255, 204, 36);
    border-radius: 50%;
    color: #fff;
    font-size: 128rpx;
}

.stopwatch-official-running {}

.stopwatch-official-running-header {
    display: flex;
    flex-direction: row;
    align-items: center;

    height: 82rpx;
    background-color: rgba(0, 0, 0, 0.15);
}

.stopwatch-header-count {
    width: 154rpx;
    color: #707070;
    font-size: 40rpx;
    text-align: center;
}

.stopwatch-header-bar {
    flex: 1;
    position: relative;
    height: 40rpx;
    padding-right: 4rpx;
    background-color: rgb(48, 45, 39);
    border: 2rpx solid #707070;
    border-radius: 20rpx;
}

.stopwatch-header-bar-inner {
    width: 0;
    height: 36rpx;
    margin: 2rpx;
    background-color: rgb(255, 204, 36);
    border-radius: 18rpx;
}

.stopwatch-header-pause {
    display: flex;
    justify-content: center;
    align-items: center;

    width: 154rpx;
}

.stopwatch-header-pause-img {
    display: block;
    width: 66rpx;
    height: 52rpx;
}

.stopwatch-header-pregame-title {
    width: 488rpx;
    height: 86rpx;
    margin: 102rpx auto 148rpx;
    background-color: #fff;
    border-radius: 43rpx;
    font-size: 40rpx;
    color: #707070;

    display: flex;
    justify-content: center;
    align-items: center;
}

.stopwatch-header-fastesttime {
    position: relative;
    width: 290rpx;
    height: 122rpx;
    margin: 94rpx auto 0;

    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.stopwatch-header-fastesttime-bg {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
}

.stopwatch-header-fastesttime-num {
    position: relative;
    width:104rpx;
    margin-right:10rpx;
    text-align:center;
}

.stopwatch .watch {
    display: flex;
    align-items: center;
    justify-content: center;

    position: relative;
    width: 488rpx;
    height: 502rpx;
    margin: 0 auto;
}

.stopwatch .watch-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.stopwatch .watch-num {
    position: relative;
    font-family: Helvetica;
    font-size: 66rpx;
    color: #00fa9a;
}

.stopwatch .watch-num-fail {
    color: #ff4500;
}