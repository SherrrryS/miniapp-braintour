/* pages/addFunction/addFunction.wxss */

@import "../../style/guide.wxss";
@import "../../app.wxss";

.game-start-header {
    display: block;
    width: 100%;
    height: 428rpx;
}

.game-start-title {
    height: 56rpx;
    margin: 64rpx 50rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}

.game-start-text {
    color: #333;
    font-size: 40rpx;
}

.game-start-time {
    font-size: 24rpx;
    color: #999;
}

.game-start-desc {
    margin: 12rpx 50rpx 98rpx;
    line-height: 44rpx;
    color: #666;
    font-size: 28rpx;
}

.game-start-score {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.game-start-score view {
    width: 50%;
}

.game-start-score-title {
    height: 34rpx;
    font-size: 24rpx;
    color: #666;
}

.game-start-score-score {
    height: 90rpx;
    font-size: 64rpx;
    color: rgb(253, 198, 0);
}

.game-start-button {
    width: 570rpx;
    margin: 90rpx auto 0;
    box-shadow: 0 2rpx 9rpx 0 rgba(253, 198, 0, 0.52);
    font-size: 32rpx;
}